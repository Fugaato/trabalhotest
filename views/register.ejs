<div class="">
    <div class="">
      <div class="">
        <h1 class=""></i>Registrar Usuário</h1>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">Nome</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="">
            <label for="patente">Patente</label>
            <input
              type="patente"
              id="patente"
              name="patente"
              class=""
              placeholder="Digite a Patente"
              value="<%= typeof patente != 'undefined' ? patente : '' %>"
            />
          </div>
          <div class="">
            <label for="idade">Idade</label>
            <input
              type="idade"
              id="idade"
              name="idade"
              class="form-control"
              placeholder="Digite a Idade"
              value="<%= typeof idade != 'undefined' ? patente : '' %>"
            />
          </div>
          <div class="">
            <label for="matricula">Matrícula</label>
            <input
              type="matricula"
              id="matricula"
              name="matricula"
              class="form-control"
              placeholder="Digite a Matrícula"
              value="<%= typeof matricula != 'undefined' ? matricula : '' %>"
            />
          </div>
          <div class="">
            <label for="admin">Administrador</label>
            <input
              type="checkbox"
              id="admin"
              name="admin"
              class="form-control"
              placeholder="O usuário é um administrador?",
              checked="checked",
              value="1"
            />
          </div>
          <div class="">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
      </div>
    </div>
  </div>